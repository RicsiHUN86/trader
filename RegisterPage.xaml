<Page x:Class="trader.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:trader"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Felhasználónév:" 
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Grid.Column="0"
                   Padding="10"
                   />
        <TextBlock Text="Jelszó:" 
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="1"
                   Grid.Column="0"
                   Padding="10"
           />
        <TextBlock Text="Jelszó mégegysze:r" 
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="2"
                   Grid.Column="0"    
                   Padding="10"
           />
        <TextBlock Text="Teljes név:" 
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"  
                   VerticalAlignment="Center"
                   Grid.Row="3"
                   Grid.Column="0"
                   Padding="10"
   />
        <TextBlock Text="Email:" 
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"  
                   VerticalAlignment="Center"
                   Grid.Row="4"
                   Grid.Column="0"
                     Padding="10"
        />
        <TextBox x:Name="UsernameTextBox" 
                 FontSize="20"
                 HorizontalAlignment="Left"  
                 VerticalAlignment="Center"
                 Width="200"
                 Grid.Row="0"
                 Grid.Column="1"
                 
        />
        <PasswordBox x:Name="PasswordBox"
                        FontSize="20"
                        HorizontalAlignment="Left"  
                        VerticalAlignment="Center"
                        Width="200"
                        Grid.Row="1"
                        Grid.Column="1"
                     />
        <PasswordBox x:Name="PasswordAgainBox"
                        FontSize="20"
                        HorizontalAlignment="Left"  
                        VerticalAlignment="Center"
                        Width="200"
                        Grid.Row="2"
                        Grid.Column="1"
                     />
        <TextBox x:Name="FullNameTextBox"
                    FontSize="20"
                    HorizontalAlignment="Left"  
                    VerticalAlignment="Center"
                    Width="200"
                    Grid.Row="3"
                    Grid.Column="1"
        />
        <TextBox x:Name="EmailTextBox"
                    FontSize="20"
                    HorizontalAlignment="Left"  
                    VerticalAlignment="Center"
                    Width="200"
                    Grid.Row="4"
                    Grid.Column="1"
         />
        <StackPanel Grid.Row="5" Grid.Column="1">
            <Button Content="Regisztráció"
                FontSize="20"
                FontWeight="Bold"
                VerticalAlignment="Center"
                Width="120"
                Background="LightSteelBlue"
                HorizontalAlignment="left"
        />
        </StackPanel>
    </Grid>
</Page>
